<?xml version='1.0' ?>
<sdf version='1.4'>
  <world name='grasping'>
    <!-- A global light source -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- A ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Table -->
    
    <!-- Beer -->
    <!-- Note that the beer object has slip issues on the table. -->
    <!--include>
      <uri>model://beer</uri>
